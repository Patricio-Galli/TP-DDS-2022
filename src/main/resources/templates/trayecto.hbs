<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Trayectos</title>
    <link rel="stylesheet" href="/css/trayecto.css">
  </head>
  <body>
  {{#with trayecto}}
    <div>
      <table class="particular">
      	<tr>
          <th>ID</th>
          <td><i>{{id}}</i></td>
        </tr>
        <tr>
          <th>FECHA</th>
          <td><i>{{periodo.mes}}/{{periodo.anio}}</i></td>
        </tr>
        <tr>
          <th>TRAMOS</th>
          <td>
            <table class="tramos">
              <tr>
                <th>ID</th>
                <th>COORDENADAS</th>
                <th>TRANSPORTE</th>
              </tr>
              {{#each tramos}}
              <tr>
                <td>{{id}}</td>
                <td>
                  <table class="coordenadas">
                    <tr>
                      <th colspan="2">INICIALES</th>
                      <th colspan="2">FINALES</th>
                    </tr>
                    <tr>
                      <td>LATITUD</td><td><i>{{ubicacionInicial.coordenada.latitud}}</i></td>
                      <td>LATITUD</td><td><i>{{ubicacionFinal.coordenada.latitud}}</i></td>
                    </tr>
                    <tr>
                      <td>LONGITUD</td><td><i>{{ubicacionInicial.coordenada.longitud}}</i></td>
                      <td>LONGITUD</td><td><i>{{ubicacionFinal.coordenada.longitud}}</i></td>
                    </tr>
                  </table>
                </td>
                <td><i>{{medioDeTransporte.clasificacion}}</i></td>
              </tr>
              {{/each}}
            </table>
          </td>
        </tr>
        <tr>
          <th>MIEMBROS</th>
          <td>
          	<table class="miembros">
              <tr><th>ID</th><th>NOMBRE</th><th>APELLIDO</th><th>DOCUMENTO</th></tr>
              {{#each miembros}}
              <tr>
                <td><i>{{id}}</i></td>
                <td><i>{{nombre}}</i></td>
                <td><i>{{apellido}}</i></td>
                <td><i>{{tipoDeDocumento}} - {{nroDocumento}}</i></td>
              </tr>
              {{/each}}
            </table>
          </td>
        </tr>
        <!--<tr>
          <th>TRANSPORTE</th>
          <td>
          	<table align="center">
              <tr><th>TIPO</th><td><i>tipo transporte</i></td></tr>
              <tr><th>VEHICULO</th><td><i>datos transporte</i></td></tr>
            </table>
          </td>
        </tr>-->
      </table>
    </div>
    <div class="edicion">
      <span><a href="#">EDITAR</a></span>
    </div>
  {{/with}}
  </body>
</html>