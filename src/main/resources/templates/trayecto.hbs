<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="icon" href="/img/logo.png">

    <title>Trayecto {{trayecto.id}}</title>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="/js/trayecto.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/trayecto.css">
  </head>
  <body>
    <header>
      <div id="header">
        <div class="user">
          <span>Usuario: </span>
          <i>{{rol}} - {{user}}</i>
        </div>
        <div class="logout">
          <form action="/logout" method="post">
            <input type="submit" value="Desconectar">
          </form>
        </div>
        <div class="titulo">
          <h1>TRAYECTOS</h1>
        </div>
      </div>
    </header>
    <div class="content">
      <div class="volver">
        <span><a href="/miembro/{{miembroID}}/trayecto?action=list">VOLVER</a></span>
<!--        <span><a href="/trayectos">VOLVER</a></span>-->
      </div>
      {{#with trayecto}}
      <div class="trayecto">
        <table class="particular">
      	  <tr>
            <th>ID</th>
            <td><i>{{id}}</i></td>
          </tr>
          <tr>
            <th>FECHA</th>
            <td><i>{{mes}}/{{año}}</i></td>
          </tr>
          <tr>
            <th>TRAMOS</th>
            <td>
              <table class="tramos">
                <tr>
                  <th>ID</th>
                  <th>TRANSPORTE</th>
                  <th>UBICACION INICIAL</th>
                  <th>UBICACION FINAL</th>
                </tr>
                {{#each tramos}}
                  <tr>
                    <td>{{id}}</td>
                    <td><i>{{transporte.info}}</i></td>
                    <td>
                      <table class="ubicaciones">
                        <tr>
                          <th>DIRECCION</th>
                          <th>COORDENADAS</th>
                        </tr>
                        <tr>
                          <td>
                            {{#if idParadaInicial}}<p><i>Parada {{idParadaInicial}} - {{ubicacionInicial.localidad}}</i></p>{{/if}}
                            <p><i>{{ubicacionInicial.calle}} {{ubicacionInicial.numero}}</i></p>
                          </td>
                          <td>
                            <table class="coordenadas">
                              <tr><td>LATITUD</td><td><i>{{ubicacionInicial.latitud}}</i></td></tr>
                              <tr><td>LONGITUD</td><td><i>{{ubicacionInicial.longitud}}</i></td></tr>
                            </table>
                          </td>
                        </tr>
                      </table>
                    </td>
                    <td>
                      <table class="ubicaciones">
                        <tr>
                          <th>DIRECCION</th>
                          <th>COORDENADAS</th>
                        </tr>
                        <tr>
                          <td>
                            {{#if idParadaFinal}}<p><i>Parada {{idParadaFinal}} - {{ubicacionFinal.localidad}}</i></p>{{/if}}
                            <p><i>{{ubicacionFinal.calle}} {{ubicacionFinal.numero}}</i></p>
                          </td>
                          <td>
                            <table class="coordenadas">
                              <tr><td>LATITUD</td><td><i>{{ubicacionFinal.latitud}}</i></td></tr>
                              <tr><td>LONGITUD</td><td><i>{{ubicacionFinal.longitud}}</i></td></tr>
                            </table>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                {{/each}}
              </table>
            </td>
          </tr>
          <tr>
            <th>MIEMBROS</th>
            <td>
          	  <table class="miembros">
                <tr><th>ID</th><th>NOMBRE</th><th>APELLIDO</th><th>DOCUMENTO</th></tr>
                {{#each miembros}}
                <tr>
                  <td><i>{{id}}</i></td>
                  <td><i>{{nombre}}</i></td>
                  <td><i>{{apellido}}</i></td>
                  <td><i>{{tipoDeDocumento}} - {{nroDocumento}}</i></td>
                </tr>
                {{/each}}
              </table>
            </td>
          </tr>
        </table>
      </div>
      <div class="editar">
        <span><a href="/miembro/{{../miembroID}}/trayecto/{{id}}?action=edit">EDITAR</a></span>
<!--        <span><a href="?mode=edit">EDITAR</a></span>-->
      </div>
      <br />
      <div class="borrar"><!-- JS: DELETE /miembro/#miembro/trayecto/#id -->
        <span><button onclick="borrarTrayecto({{../miembroID}}, {{id}})">BORRAR</button></span>
      </div>
      <div class="confirmar" id="confirmacion" style="display: none">
        <div class="confirmar-botones">
          <div class="confirmar-texto">
<!--            <span><label>¿Confirmar borrado de trayecto?</label></span>-->
            <span><label>¿CONFIRMAR BORRADO DEL TRAYECTO?</label></span>
          </div>
          <span><button id="accion-borrado" onclick="">CONFIRMAR</button></span>
          <span><button onclick="cancelarBorradoTrayecto()">CANCELAR</button></span>
        </div>
      </div>
      {{/with}}
    </div>
  </body>
</html>