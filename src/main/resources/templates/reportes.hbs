<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="icon" href="/img/logo.png">
    <title>Reportes</title>
    <link rel="stylesheet" href="/css/reportes.css">
</head>
<body>
  <div class="volver">
    <span><a href="/home">VOLVER AL MENU PRINCIPAL</a></span>
  </div>
  <div class="organizaciones">
    <table class="general">
        <thead>
        <tr>
            <th>ID</th>
            <th>RAZON SOCIAL</th>
            <th>REPORTES</th>
        </tr>
        </thead>
        <tbody>
        {{#each organizaciones}}
        <tr>
            <td><i>{{id}}</i></td>
            <td><i>{{razon}}</i></td>
            <td>
                <div class="reportes">
                    <table>
                        {{#each reportes}}
                        <tr>
                            <td><i>{{id}}</i></td>
                            <td><i>{{fechaCreacion}}</i></td>
                            <td><i>Total= {{consumoTotal}}</i></td>
                            <td><i><a href="/organizacion/{{../id}}/reporte/{{id}}">Detalles</a></i></td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
  </div>
  <div class="generar">
      <span><a href="/reporte">Generar Reporte</a></span>
  </div>
</body>
</html>